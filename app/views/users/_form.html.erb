<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.text_field :password %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :gender %>
    <%= f.select :gender, [['Hombre', 'Hombre'], ['Mujer', 'Mujer']], class:"form-control"%>
  </div>

  <div class="field">
    <%= f.label :cel %>
    <%= f.number_field :cel %>
  </div>

  <div class="field">
    <%= f.label :birthdate %>
    <%= f.date_select :birthdate, start_year: 1910, end_year: Time.now.year %>
  </div>

  <div class="field">
    <%= f.label :has_a_car %>
    <%= f.check_box :has_a_car %>
  </div>

  <div class="field">
    <%= f.label :trademark %>
    <%= f.text_field :trademark %>
  </div>

  <div class="field">
    <%= f.label :model %>
    <%= f.text_field :model %>
  </div>

  <div class="field">
    <%= f.label :year %>
    <%= f.number_field :year %>
  </div>

  <div class="field">
    <%= f.label :color %>
    <%= f.text_field :color %>
  </div>

  <div class="field">
    <%= f.label :plate %>
    <%= f.text_field :plate %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
